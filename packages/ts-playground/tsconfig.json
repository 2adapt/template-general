{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "declaration": true,
    "declarationDir": "build/types",
    // "declarationMap": true,
    "noEmitOnError": true,
    "rewriteRelativeImportExtensions": true,
    "allowImportingTsExtensions": true,
    "target": "esnext",
    "allowJs": true,
    // "checkJs": true,

    // avoid the "Do you need to change your target library?" errors
    // "skipLibCheck": true,

    // "any imports or exports without a type modifier are left around. Anything that uses the type modifier is dropped entirely."
    "verbatimModuleSyntax": true,

    "module": "nodenext",
    // avoid the "Cannot redeclare block-scoped variable" errors; see: https://www.totaltypescript.com/cannot-redeclare-block-scoped-variable
    "moduleDetection": "force"
  },
  "include": ["src/00-main.ts"],
}
